//highlighter

img::selection, ::selection {
  background: lightblue;
  color: inherit;
}

/*homepage */



/*ROTATOR*/
.bx-wrapper {
  box-shadow: 0 !important;
}
#site-header {
  border-bottom: none;
}
#site-body {
  overflow-x: hidden;
  padding-top: 0;
  position: relative;
  z-index: 1;
}
/*landing pages*/

.landing-title {
    margin: 10px 0;
    text-align: center;
    font-size: 1.4375rem;

  a { 
    font-weight: 500;
    font-size: 22px;
    font-family: Droid Serif, Helvetica, Arial, sans-serif;
    line-height: 1.2em;
  }
  &:hover {
    color: #487ed6;
  }
}
.fade {
  .fade {
   opacity: 1;
   transition: opacity .5s ease-in-out;
   -moz-transition: opacity .5s ease-in-out;
   -webkit-transition: opacity .5s ease-in-out;
   }

   &:hover {
    opacity: 0.5;
  }
}

