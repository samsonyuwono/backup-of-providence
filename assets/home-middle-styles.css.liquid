#below-banner-container{
  margin-top: 5px !important;
  margin-bottom: 0px !important;
}

#links-below-banner{
  margin: 0 auto;
  text-align: center;
  margin-top: 15px;
}
#links-below-banner .link-container{
  display: inline-block;
  position: relative;
  height: 230px;
  width: 230px;
  vertical-align: top;
  margin-left: 10px;
  margin-right: 10px;
  background-size: contain;
}
#links-below-banner .link-container:hover{
  border: solid #8dabdd 5px;
  border-radius: 18px;
}


#links-below-banner .link-container a{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
#links-below-banner #box-1{
  background-image: url("//cdn.shopify.com/s/files/1/0578/7201/files/Crib_Button.jpg");
}
#links-below-banner #box-1 #crib-img-text-contain{
  height: 100%;
  padding-top: 40px;
}
#links-below-banner #box-1 h2{
  font-family: 'bubblegum';
  color: #79A2D8;
  font-size: 290%;
  line-height: 1;
  margin-bottom: 0;
  position: relative;
  top: -5px;
}
#links-below-banner #box-1 img{
  width: 65%;
  top: -10px;
  position: relative;
}
#links-below-banner #box-2{
  background-image: url("//cdn.shopify.com/s/files/1/0578/7201/files/Mattress_Button.jpg");
}
#links-below-banner #box-2 h2{
  font-family: 'lie-to-me';
  color: #F7D00F;
  position: relative;
  font-size: 300%;
  line-height: 230px;
}
#links-below-banner #box-3{
  background-image: url("//cdn.shopify.com/s/files/1/0578/7201/files/Sale_Button.jpg");
}
#links-below-banner #box-3 h2{
  font-family: 'cartoonist';
  color: #DD87BF;
  position: relative;
  font-size: 450%;
  line-height: 230px;
}
#links-below-banner #box-4{
  background-image: url("//cdn.shopify.com/s/files/1/0578/7201/files/Warranty_Button.jpg");
}
#links-below-banner #box-4 h2{
  font-family: 'montserrat-e-bold';
  color: #B7DD9E;
  position: relative;
  font-size: 210%;
    line-height: 45px;
    top: 45px;
}

@media screen and (max-width: 1350px){
  #below-banner-container{
    margin-top: 5px !important;
    margin-bottom: 0px !important;
  }
  #links-below-banner .link-container{
    display: inline-block;
    position: relative;
    height: 150px;
    width: 150px;
    vertical-align: top;
    margin-left: 5px;
    margin-right: 5px;
    background-size: contain;
  }

  #links-below-banner #box-1 h2{
    font-size: 180%;
    top: 0;
  }
  #links-below-banner #box-1 #crib-img-text-contain{
    padding-top: 20px;
  }
  #links-below-banner #box-1 #crib-img-text-contain img{
    width: 60%;
    top: 0;
  }
  #links-below-banner #box-2 h2{
    font-size: 200%;
    line-height: 150px;
  }
  #links-below-banner #box-3 h2{
    font-size: 300%;
    line-height: 150px;
  }
  #links-below-banner #box-4 h2{
    font-size: 120%;
    line-height: 25px;
    top: 35px;
  }
}

