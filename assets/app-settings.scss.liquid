  .remove-from-cart,
  .search-result i,
  .side-nav li ul li:before,
  .text-color-quiet,
  .variant {
    color: {{ settings[text_color_quiet] }};
  }

  // Link color
  a,
  .card:hover h2 a,
  .has-tip:hover,
  .hide-calculator:hover,
  .pagination li:not(.unavailable) a:hover,
  .remove-from-cart:hover,
