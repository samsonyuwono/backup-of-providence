  .fn,
  .has-tip,
  .hproduct .pricing .price:not(.compare),
  .line-price,
  .pagination li.current a,
  .text-color-loud,
  dt,
  label {
    color: {{ settings[text_color_loud] }};
  }

  // Text color quiet
  a.tag,
  cite,
  h1 small,
  h2 small,
  h3 small,
  h4 small,
  .amounts,
  .breadcrumbs>* a,
  .brand,
