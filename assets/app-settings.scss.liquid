  .button {
    @include button-color($button-bg-color, $button-bg-color-hover, $button-text-color, $button-text-color-hover);
    color: $button-text-color;

    &.secondary{ @include button-color($button-s-bg-color, $button-s-bg-color-hover, $button-s-text-color, $button-s-text-color-hover); }

