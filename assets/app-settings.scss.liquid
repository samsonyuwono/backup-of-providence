    &.light-purple{ @include button-color($light-purple,$light-purple,#fff,#fff); }
    &.navy{ @include button-color($navy,$navy,#fff,#fff); }
    &.blue{ @include button-color($blue,$blue,#fff,#fff); }
    &.turquoise{ @include button-color($turquoise,$turquoise,#fff,#fff); }
    &.green{ @include button-color($green,$green,#fff,#fff); }
    &.yellow{ @include button-color($yellow,$yellow,#fff,#fff); }
    &.orange{ @include button-color($orange,$orange,#fff,#fff); }
    &.red{ @include button-color($red,$red,#fff,#fff); }
    &.maroon{ @include button-color($maroon,$maroon,#fff,#fff); }
    &.pink{ @include button-color($pink,$pink,#fff,#fff); }

    &.disabled,
    &[disabled],
    &.disabled:hover,
    &.disabled:active,
    &[disabled]:hover,
    &[disabled]:active {
