{% assign text_color = "color_*_text" | replace: '*', section %}
{% assign text_color_loud = "color_*_text_loud" | replace: '*', section %}
{% assign text_color_quiet = "color_*_text_quiet" | replace: '*', section %}
{% assign header_color = "color_*_headers" | replace: '*', section %}
{% assign anchor_color = "color_*_link" | replace: '*', section %}
{% assign anchor_color_hover = "color_*_link_hover" | replace: '*', section %}


