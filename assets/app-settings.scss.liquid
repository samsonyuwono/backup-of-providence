/*  Alert boxes + Notice bar
/*-------------------------- */
.alert-box,
#notify-bar {

  @include notice-color($notice-alt-bg-color, $notice-alt-text-color, $notice-alt-link-color, $notice-alt-link-color-hover);

  &.secondary {
    @include notice-color($notice-bg-color, $notice-text-color, $notice-link-color, $notice-link-color-hover);
  }

  &.success {
    @include notice-color($success-bg-color, $success-text-color, $success-link-color, $success-link-color-hover);
  }

  &.warning {
    @include notice-color($warning-bg-color, $warning-text-color, $warning-link-color, $warning-link-color-hover);
  }

  &.error {
    @include notice-color($error-bg-color, $error-text-color, $error-link-color, $error-link-color-hover);
  }

}

#notify-bar {
  @include notice-color($notice-bg-color, $notice-text-color, $notice-link-color, $notice-link-color-hover);
