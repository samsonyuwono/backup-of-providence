/*-------------------------------------------------- */
/*  Mixins
/*-------------------------------------------------- */


// Buttons
@mixin button-color($bg-color, $bg-color-hover, $color, $color-hover){
  background-color: $bg-color;
  color: $color;

  &:hover{
    @if ($bg-color-hover == $bg-color) {
      background-color: desaturate(darken($bg-color-hover, 8%), 5%);
    }
    @else {
      background-color: $bg-color-hover;
    }
    color: $color-hover;
  }

  &:active,
  &:focus {
    background-color: desaturate(darken($bg-color-hover, 15%), 5%);
    box-shadow: inset 0 0.15em 0 rgba(0,0,0,0.15);
    color: $color;
  }

}


@mixin notice-color ($bg-color, $text-color, $link-color, $link-color-hover) {
  background-color: $bg-color;
  color: $text-color;

  a {
    color: $link-color;
    &:hover{
      color: $link-color-hover;
    }
  }

  .button {
    background: transparent;
    border-color: $text-color;
    color: $text-color;

    &:hover {
      background-color: $text-color;
      color: $bg-color;
    }

    &:active {
      background-color: darken($text-color, 5%);
      border-color: darken($text-color, 5%);
      box-shadow: none;
    }
  }
}


