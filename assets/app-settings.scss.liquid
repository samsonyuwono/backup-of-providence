    }
  }


  // Colored links
  h2.entry-title a,
  .search-result h3 a,
  .widget-cart a.title,
  .widget-products h3 a {
    color: {{ settings[header_color] }};
    &:hover {
      color: {{ settings[anchor_color] }};
    }
  }

  .article-next-prev a,
  .entry-meta a,
  .side-nav li > a:first-child:not(.button),
  .widget-social-links a {
    color: {{ settings[text_color] }};
    &:hover {
      color: {{ settings[anchor_color_hover] }};
    }
  }

  .side-nav li.active > a:first-child:not(.button) {
    color: {{ settings[anchor_color] }};
  }

  .brand a,
  .com-meta a {
    color: {{ settings[text_color_quiet] }};
    &:hover {
      color: {{ settings[anchor_color] }};
    }
  }


  // Tabs
  .tabs dd {
    >a {

      border-color: ${{section}}-line-color;
      color: {{ settings[text_color_quiet] }};

      @if (${{section}}-bg-color == "transparent") {
        background-color: $x-light-grey;
      }
      @else {
        background: darken(${{section}}-bg-color, 5%);
      }
    }
    &:hover,
    &.active {
      > a {
        background: transparent;
        color: {{ settings[text_color] }};
      }
    }
  }


  // Tags
  .tags a {
    color: {{ settings[text_color_quiet] }};
    &:hover {
      background: $button-bg-color;
      border-color: $button-bg-color;
      color: $button-text-color;
    }
  }

}
