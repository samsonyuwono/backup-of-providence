{% if template contains 'product' %}
  {% assign tb = 'product' %}
{% elsif template contains 'article' %}
  {% assign tb = 'article' %}
{% endif %}

{% assign display_google_plus =  tb | append: '_display_sharing_google_plus?' %}
{% assign display_twitter =  tb | append: '_display_sharing_twitter?' %}
{% assign display_facebook =  tb | append: '_display_sharing_facebook?' %}
{% assign display_pinterest =  tb | append: '_display_sharing_pinterest?' %}

{% case tb %}
  {% when 'product' %}
    {% assign social_url = product.url %}
  {% when 'article' %}
    {% assign social_url = article.url %}
  {% else %}
    {% assign social_url = '' %}
{% endcase %}

<div class="sharing">
  <div class="sharing-links">
    {% if settings[display_facebook] %}
  <div class="share-fb socialIcon">
    <iframe src="//facebook.com/plugins/like.php?href={{ shop.url | append: social_url }}&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=true&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; height:21px; width: 200px; opacity:0;" allowTransparency="true"></iframe>
  </div>
  {% endif %}
    
  {% if tb == 'product' and settings[display_pinterest] %}
  <div class="share-pinterest socialIcon">
    <a href="http://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&amp;media={{ product.featured_image | product_img_url: '1024x1024' }}&amp;description={{ product.description | strip_html | truncatewords: 20 | escape }}" class="pin-it-button">{{ 'general.social_sharing.pin' | t }}</a>
    <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
  </div>
  {% endif %}

  {% if settings[display_google_plus] %}
  <div class="share-google socialIcon">
    <g:plusone size="medium" annotation="none"></g:plusone>
  </div>
  {% endif %}

  {% if settings[display_twitter] %}
  <div class="share-twitter socialIcon">
    <a href="http://twitter.com/share" data-url="{{ shop.url | append: social_url }}" data-text="{% if template == 'product' %}{{ product.title | escape }} by {{ product.vendor | escape }}{% elsif template == 'article' %}{{ article.title | escape }}{% else %}{{ page_title | escape }}{% endif %}" class="twitter-share-button" data-count="none">{{ 'general.social_sharing.tweet' | t }}</a>
    <script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
  </div>
  {% endif %}

  </div>

</div>