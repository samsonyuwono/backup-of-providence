<div class="mobile-nav-select-wrap hide-for-medium-up">
  <nav class="mobile-nav-select">
    <form>
      <select>
        <option>{{ 'mobile.footer_navigation.title_link' | t }}</option>

        {% capture cart_item_count %}<span class="count">{{ 'cart.item_count' | t: count: cart.item_count }}</span>{% endcapture %}

        {% capture cart_total_price %}{{ cart.total_price | money  }}{% endcapture %}

        <option value="#">{{ 'mobile.footer_navigation.checkout_link_html' | t: cart_item_count: cart_item_count, cart_total_price: cart_total_price }}</option>

        {% for link in linklists[settings.footer_nav_primary_list].links %}

          {% assign current = false %}
          {% if template == 'index' and link.url == '/' %}
            {% assign current = true %}
          {% elsif collection.url == link.url %}
            {% assign current = true %}
          {% elsif blog.url == link.url %}
            {% assign current = true %}
          {% elsif page.url == link.url %}
            {% assign current = true %}
          {% elsif page_title == link.title %}
            {% assign current = true %}
          {% elsif template == 'list-collections' and link.url == '/collections' %}
            {% assign current = true %}
          {% elsif page_title == 'Products' and link.url == '/collections/all' %}
            {% assign current = true %}
          {% elsif template == 'article' and link.url == article.url %}
            {% assign current = true %}
          {% endif %}

          {% capture child_list_handle %}{{ link.title | handle }}{% endcapture %}

          {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
            <optgroup label="{{ link.title }}">
              {% for l in linklists[child_list_handle].links %}
                <option value="{{ l.url }}" {% if current %}selected="selected"{% endif %}>{{ l.title }}</option>
              {% endfor %}
            </optgroup>
          {% else %}
            <option value="{{ link.url }}" {% if current %}selected="selected"{% endif %}>{{ link.title }}</option>
          {% endif %}

        {% endfor %}

        {% if shop.customer_accounts_enabled && customer%}
          {% if customer %}
            <option value="/account/logout">{{ 'customer_accounts.sign_out' | t }}</option>
          {% else %}
            <option value="/account/login">{{ 'customer_accounts.sign_in' | t }}</option>
          {% endif %}
        {% endif %}

      </select>

    </form>
  </nav>
</div>