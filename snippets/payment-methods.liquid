{% assign payment_methods_string = 'paypal, google-checkout, visa, mastercard, maestro, cirrus, american-express, discover, 2checkout, bitcoin' %}
{% assign methods = payment_methods_string | split: ', ' %}

<div id="payment-methods">

{% for method in methods %}
  {% assign display_current_method = method | prepend: 'payment_methods_display_' | append: '?' %}

  {% if settings[display_current_method] %}
    {% assign current_method_icon = method | prepend: 'img-icon-cc-' | append: '.png' %}
      <a href="/cart" class="payment-method" title="{{ method | replace: '-', ' ' | downcase | capitalize }}">{{ current_method_icon | asset_url | img_tag: method }}</a>
  {% endif %}

{% endfor %}
</div>