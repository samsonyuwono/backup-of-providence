<article class="hproduct product-{{product.id}} {{product.handle}} child-item">

  <header>
    <h3>
      <a href="{{ product.url | within: collection }}" title="{{ product.title }}">
        <span class="name">{{ product.title }}</span>
      </a>
    </h3>
  </header>

  {% capture product_image %}
      {% if settings[display_images] %}
        <div class="image">
          <a href="{{ product.url | within: collection }}" title="{{ product.title }}">
            <img src="{{ product.images.first | product_img_url: 'grande' }}" alt="{{ product.title }}" />
          </a>
        </div>
      {% endif %}
  {% endcapture %}

  {%capture product_details %}
    <div class="details">
      {% include 'product-price' %}

      {% if settings[display_description] %}
      <p class="description">{{product.description | truncatewords: 15 | strip_html }}</p>
      {% endif %}
    </div>

    {% if settings[display_button] %}
    <a href="{{ product.url | within: collection }}" class="button small">Details</a>
    {% endif %}
  {% endcapture %}

  {% if settings[display_images] %}
  <div class="row">
    <div class="small-4 columns">
      {{ product_image }}
    </div>
    <div class="small-8 columns">
      {{ product_details }}
    </div>
  </div>
  {% else %}
    {{ product_details }}
  {% endif %}

</article>