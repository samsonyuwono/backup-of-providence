<div id="activate-account" class="account-session-module">
  <div class="inner">

  <h3>{{ 'customer_accounts.activate_account.title' | t }}</h3>

  <p class="note">
    {{ 'customer_accounts.activate_account.message_html' | t }}
  </p>

  {% form 'activate_customer_password' %}

  <fieldset>

    {% if form.errors %}
    <div class="alert-box error">
      <ul class="errors-list">
        {% for field in form.errors %}
          <li>{{ form.errors.messages[field] }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    {% include 'customer-account-field-password' %}
    {% include 'customer-account-field-password-confirm' %}

    <div class="form-actions">
      <button type="submit" class="button">{{ 'customer_accounts.activate_account.submit' | t }}</button>
    </div>

  </fieldset>

  {% endform %}

  </div>
</div>